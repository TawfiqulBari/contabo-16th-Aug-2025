{{!< default}}

<main class="site-main">
    <div class="container">
        {{#if @custom.hero_section}}
            <section class="hero-section">
                <div class="hero-content">
                    <h1 class="hero-title">{{@custom.hero_title}}</h1>
                    <p class="hero-description">{{@custom.hero_description}}</p>
                    {{#if @custom.hero_button_text}}
                        <a href="{{@custom.hero_button_link}}" class="hero-button">{{@custom.hero_button_text}}</a>
                    {{/if}}
                </div>
            </section>
        {{/if}}

        <section class="posts-feed">
            {{#foreach posts}}
                <article class="post-card {{post_class}}">
                    {{#if feature_image}}
                        <figure class="post-card-image">
                            <img src="{{feature_image}}" alt="{{title}}" />
                        </figure>
                    {{/if}}
                    <div class="post-card-content">
                        <header class="post-card-header">
                            <h2 class="post-card-title">
                                <a href="{{url}}">{{title}}</a>
                            </h2>
                            <div class="post-card-meta">
                                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
                                {{#if reading_time}}
                                    <span class="reading-time">{{reading_time}}</span>
                                {{/if}}
                            </div>
                        </header>
                        <section class="post-card-excerpt">
                            <p>{{excerpt words="33"}}</p>
                        </section>
                        <footer class="post-card-footer">
                            {{#if tags}}
                                <div class="post-card-tags">
                                    {{#foreach tags}}
                                        <a href="{{url}}" class="tag">{{name}}</a>
                                    {{/foreach}}
                                </div>
                            {{/if}}
                        </footer>
                    </div>
                </article>
            {{/foreach}}
        </section>

        {{pagination}}
    </div>
</main>